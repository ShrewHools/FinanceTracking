<% categories.each do |category| %>
  <div class="category">
    <div class="desrtiption_wrapper">
      <p class="name">
        Name - <%= category.name %>
      </p>
      <p class="status">
        Status - <%= category.status %>
      </p>
    </div>
    <div class="links_wrapper">
      <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-primary btn-edit' %>
      <%= link_to 'Delete', category, method: :delete, data: { confirm: 'You sure?' }, class: 'btn btn-danger' %>
    </div>
  </div>
<% end %>
