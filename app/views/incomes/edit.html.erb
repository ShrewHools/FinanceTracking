<section class="income_edit report_edit">
  <%= form_for(@income, html: { class: 'report_edit_form' }) do |f| %>
    <div class="input_wrapper">
      <%= f.label :category %>
      <%= f.select(:category_id, @categories.collect {|c| [ c.name, c.id ] }) if @categories.any? %>
    </div>

    <div class="input_wrapper">
      <%= f.label :amount %>
      <div class="form-group">
        <label class="sr-only" for="exampleInputAmount">Amount (in dollars)</label>
        <div class="input-group">
          <div class="input-group-addon">$</div>
          <%= f.text_field :amount, class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="input_wrapper">
      <%= f.label :when %>
      <%= f.date_field :when, class: 'form-control', placeholder: 'dd.mm.yyyy' %>
    </div>

    <div class="input_wrapper text_area">
      <%= f.label :description %>
      <%= f.text_area :description, cols: 20, rows: 5, class: 'form-control' %>
    </div>

    <div class="input_wrapper">
      <%= f.submit "Update", class: "btn btn-large btn-primary" %>
    </div>
  <% end %>
</section>
