<% categories.each do |category| %>
  <div class="category">
    <%= category.name %>
    <%= link_to 'update', edit_category_path(category), class: 'btn btn-primary' %>
    <%= link_to 'delete', category, method: :delete, data: { confirm: 'You sure?' }, class: 'btn btn-danger' %>
  </div>
<% end %>
