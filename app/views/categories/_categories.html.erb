<% categories.each do |category| %>
  <div class="category">
    <div class="name">
      <span class="disp_mob">Name:</span><%= category.name %>
    </div>
    <div class="links_wrapper btns">
      <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-primary btn-edit' %>
      <%= link_to 'Delete', category, method: :delete, data: { confirm: 'You sure?' }, class: 'btn btn-danger' %>
    </div>
  </div>
<% end %>
